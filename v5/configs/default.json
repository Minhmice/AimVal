{
  "udp": {
    "mode": "mjpeg",
    "url": "udp://@:8080",
    "mjpeg_port": 8080,
    "max_width": 1280,
    "max_height": 720,
    "reconnect_interval_ms": 500
  },
  "visual": {
    "show_boxes": true,
    "show_skeleton": false,
    "show_mask": false,
    "show_trails": false,
    "thickness": 2,
    "font_scale": 0.5,
    "alpha_overlay": 1.0,
    "theme": "dark",
    "scale": 1.0
  },
  "hsv": {
    "enabled": true,
    "lower": [
      20,
      100,
      100
    ],
    "upper": [
      35,
      255,
      255
    ],
    "morph_kernel": 3,
    "min_area": 150,
    "merge_iou": 0.2,
    "profiles": {
      "yellow": [
        [
          20,
          100,
          100
        ],
        [
          35,
          255,
          255
        ]
      ],
      "purple": [
        [
          130,
          60,
          60
        ],
        [
          155,
          255,
          255
        ]
      ]
    }
  },
  "ai": {
    "enabled": true,
    "provider": "onnxruntime",
    "model_path": "",
    "conf_thresh": 0.35,
    "iou_thresh": 0.45,
    "classes": [
      "person"
    ],
    "warmup_frames": 2
  },
  "pose": {
    "enabled": false,
    "min_conf": 0.2,
    "edges": "coco"
  },
  "fusion": {
    "mode": "Priority",
    "fusion_iou_thr": 0.3,
    "nms_iou_thr": 0.45,
    "top_k": 30
  },
  "tracking": {
    "enabled": true,
    "trails": false
  },
  "logging": {
    "enabled": true,
    "csv_path": "logs/metrics.csv",
    "log_every_n_frames": 20,
    "include_per_stage_timing": false
  },
  "actions": {
    "aim_enabled": false,
    "trigger_enabled": false,
    "mouse_sensitivity": 0.35,
    "mouse_smoothness": 0.8,
    "trigger_delay_ms": 10.0,
    "trigger_cooldown": 0.15
  },
  "ui": {
    "language": "vi",
    "title": "AimVal v5",
    "theme": "dark",
    "scale": 1.0
  }
}